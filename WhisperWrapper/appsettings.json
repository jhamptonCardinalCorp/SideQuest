{
  "Paths": {
    "PythonExe": "python", // or full path e.g. C:\\Python312\\python.exe
    "TranscribeScript": "transcribe.py",
    "SpeakerScript": "speakers_placeholder.py",
    "MediaRoot": "D:\\media" // default folder to watch/process
  },
  "Transcription": {
    "Model": "large-v3",
    "Device": "cuda", // "cpu" if needed
    "ComputeType": "float16", // "int8_float16" if VRAM is tight
    "Language": null, // "en" to force English
    "Task": "transcribe" // or "translate"
  },
  "Run": {
    "WatchMode": false, // true = directory watcher; false = one-off file
    "InputFile": "D:\\media\\example.mp4", // used when WatchMode=false
    "StopOnError": true
  }
}
